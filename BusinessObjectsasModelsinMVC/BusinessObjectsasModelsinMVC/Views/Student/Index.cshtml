@model IEnumerable<BusinessObjectsasModelsinMVC.Models.StudentsDetailsViewModel>

@{
    ViewBag.Title = "Student Index";
}

<h2>Student Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.studentEmails)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        using (@Html.BeginForm("Delete", "Student", new { Studentid = item.Id }))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.studentEmails)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { studentid = item.Id }) |
                    @Html.ActionLink("Add Email", "AddEmail", new { Studentid = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { studentid = item.Id }) |
                    <input type="Submit" value="Delete" onclick="return confirm('Are you sure you want to delete record with id @item.Id')" />
                </td>
            </tr>
        }
    }

</table>

